<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:" />
            <EditText
                android:id="@+id/editTextNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:minHeight="48dp" />

            <!-- Raça -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raça:" />

            <Spinner
                android:id="@+id/etRaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/race_array"
                android:minHeight="48dp" />

            <!-- Força -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Força:" />
            <EditText
                android:id="@+id/editTextForca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Força"
                android:minHeight="48dp" />

            <!-- Destreza -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destreza:" />
            <EditText
                android:id="@+id/editTextDestreza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Destreza"
                android:minHeight="48dp" />

            <!-- Constituição -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Constituição:" />
            <EditText
                android:id="@+id/editTextConstituicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Constituição"
                android:minHeight="48dp" />

            <!-- Inteligência -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inteligência:" />
            <EditText
                android:id="@+id/editTextInteligencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inteligência"
                android:minHeight="48dp" />

            <!-- Sabedoria -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabedoria:" />
            <EditText
                android:id="@+id/editTextSabedoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sabedoria"
                android:minHeight="48dp" />

            <!-- Carisma -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carisma:" />
            <EditText
                android:id="@+id/editTextCarisma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Carisma"
                android:minHeight="48dp" />

            <!-- Botões -->
            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar" />

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>